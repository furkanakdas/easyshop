{
  "$schema": "http://json-schema.org/draft-07/schema#",
  
    "type": "object",
    "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": ["string", "null"] },
    "price": { "type": "string" },
    "currency": { "type": "string" },
    "createdAt": { "type": "string" },
    "updatedAt": { "type": "string" },
    "stripePriceId": { "type": "string" },
    "stripeProductId": { "type": "string" },
    "categoryId": { "type": "string" },
    "sellerId": { "type": "string" },
    "attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "attributeDefinitionId": { "type": "string" },
          "name": { "type": "string" },
          "value": { "type": "string" },
          "unit": { "type": ["string", "null"] }
        },
        "required": ["attributeDefinitionId", "name", "value", "unit"]
      }
    },
    "tagsIds": {
      "type": "array",
      "items": { "type": "string" }
    },
    "inventory": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "quantity": { "type": "number" }
      },
      "required": ["id", "quantity"]
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "price",
    "currency",
    "createdAt",
    "updatedAt",
    "stripePriceId",
    "stripeProductId",
    "categoryId",
    "sellerId",
    "attributes",
    "tagsIds",
    "inventory"
  ]
}
