{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": ["string", "null"] },
    "price": { "type": "string" },
    "currency": { "type": "string" },
    "createdAt": { "type": "string" },
    "updatedAt": { "type": "string" },
    "category": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "categoryIdPath": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["id", "name", "categoryIdPath"]
    },
    "seller": {
      "type": "object",
      "properties": {
        "id": { "type": "string" }
      },
      "required": ["id"]
    },
    "attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "attributeDefinitionId": { "type": "string" },
          "name": { "type": "string" },
          "value": { "type": "string" },
          "unit": { "type": ["string", "null"] }
        },
        "required": ["attributeDefinitionId", "name", "value", "unit"]
      }
    },
    "tagIds": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "price",
    "currency",
    "createdAt",
    "updatedAt",
    "category",
    "seller",
    "attributes",
    "tagIds"
  ]
}